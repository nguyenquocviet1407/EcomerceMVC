@model EcomerceMVC.ViewModels.NhapNhaCungCapViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-header">
	<h3 class="fw-bold mb-3">Tạp Hóa</h3>
	<ul class="breadcrumbs mb-3">
		@* <li class="nav-home">
			<a href="#">
				<i class="icon-home"></i>
			</a>
		</li> *@
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a href="#">Home</a>
		</li>
		<li class="separator">
			<i class="icon-arrow-right"></i>
		</li>
		<li class="nav-item">
			<a href="#">Danh mục nhà cung cấp</a>
		</li>
	</ul>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="d-flex align-items-center">
					<h4 class="card-title">Danh mục nhà cung cấp</h4>
					<button class="btn btn-primary btn-round ms-auto"
							data-bs-toggle="modal"
							data-bs-target="#addRowModal">
						<i class="fa fa-plus"></i>
						Add Row
					</button>
				</div>
			</div>
			<div class="card-body">
				<!-- Modal -->
				<div class="modal fade"
					 id="addRowModal"
					 tabindex="-1"
					 role="dialog"
					 aria-hidden="true" data-bs-backdrop="static">
					<div class="modal-dialog modal-dialog-centered modal-lg">
						<div class="modal-content">
							<form id="FormNhapNhaCungCap" enctype="multipart/form-data">
								<div class="modal-header border-0">
									<h5 class="modal-title">
										<span class="fw-mediumbold"> New</span>
										<span class="fw-light"> Row </span>
									</h5>
									<button type="button"
											class="close"
											data-bs-dismiss="modal"
											aria-label="Close">
										<i aria-hidden="true">&times;</i>
									</button>
								</div>
								<div class="modal-body">
									<div class="container-fluid">
										<p class="small">
											Thêm nhà cung cấp
										</p>
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label asp-for="@Model.MaNcc" class="form-label my-3"></label><sup>*</sup>
													<input asp-for="@Model.MaNcc" class="form-control">
													<span asp-validation-for="@Model.MaNcc" class="text-danger"></span>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label asp-for="@Model.TenCongTy" class="form-label my-3"></label><sup>*</sup>
													<input asp-for="@Model.TenCongTy" class="form-control">
													<span asp-validation-for="@Model.MaNcc" class="text-danger"></span>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label asp-for="@Model.NguoiLienLac" class="form-label my-3"></label>
													<input asp-for="@Model.NguoiLienLac" class="form-control">
													<span asp-validation-for="@Model.NguoiLienLac" class="text-danger"></span>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label asp-for="@Model.Email" class="form-label my-3"></label><sup>*</sup>
													<input asp-for="@Model.Email" class="form-control">
													<span asp-validation-for="@Model.Email" class="text-danger"></span>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<div class="form-group">
														<label asp-for="@Model.DienThoai" class="form-label my-3"></label><sup>*</sup>
														<input asp-for="@Model.DienThoai" class="form-control">
														<span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<div class="form-group">
														<label asp-for="@Model.DiaChi" class="form-label my-3"></label><sup>*</sup>
														<input asp-for="@Model.DiaChi" class="form-control">
														<span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label asp-for="@Model.MoTa" class="form-label my-3"></label>
													<textarea asp-for="@Model.MoTa" class="form-control" spellcheck="false" cols="30" rows="5"></textarea>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<div class="col-lg-10">
														<label asp-for="@Model.Logo" class="form-label my-3">Hình ảnh</label>
														<div class="border rounded">
															<img id="hinh" class="img-fluid rounded" alt="Image">
														</div>
														<input asp-for="@Model.FileHinh" type="file" class="form-control" id="File" onchange="chooseFile(this)" accept="image/gif, image/jpeg, image/png">
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="modal-footer border-0">
									<button type="submit"
											id="addRowButton"
											class="btn btn-primary">
										Thêm
									</button>
									<button type="button"
											class="btn btn-danger"
											data-bs-dismiss="modal">
										Close
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="table-responsive">
					<table id="Tab_NhaCungCap" class="display table table-striped table-hover">
						<thead>
							<tr>
								<th>Mã NCC</th>
								<th>Tên Công Ty</th>
								<th>Người Liên Lạc</th>
								<th>Email</th>
								<th>Điện thoại</th>
								<th>Địa chỉ</th>
								<th>Mô tả</th>
								<th>Logo</th>
								<th style="width: 10%">Action</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<script>
		// hiển thị hình ảnh
		function chooseFile(fileInput) {
			if (fileInput.files && fileInput.files[0]) {
				var reader = new FileReader();
				reader.onload = function (e) {
					$('#hinh').attr('src', e.target.result);
				}
				reader.readAsDataURL(fileInput.files[0]);
			}
		}

		// load data nhacc lên bảng
		$.ajax({
			url:'/Admin/DanhMucNhaCungCap/LoadDMNhaCC',
			type: 'GET',
			dataType: 'json',
			contentType:'application/json',
			success: function(obj){
				$("#Tab_NhaCungCap").DataTable({
					data: obj,
					responsive: true,
					columns: [
						{ data: 'maNcc' },
						{ data: 'tenCongTy' },
						{ data: 'nguoiLienLac' },
						{ data: 'email' },
						{ data: 'dienThoai' },
						{ data: 'diaChi' },
						{ data: 'moTa' },
						{
							data: null,
							render: function (data, type, row) {
								if (type == 'display') {
									var a = '<img src="/Hinh/NhaCC/' + row.logo + '" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px; "></img>';
									return a;
								}
								return data;
							}
						},
						{
							data: 'maNcc',
							render: function (data, type, row) {
								var button = "<a href ='UpdateNhaCungCap?MaNcc=" + data + "' class='btn btn-link btn-primary'><i class='fa fa-edit'></i></a>" +
									"<button type='button' id='btnXoa' class='btn btn-link btn-danger'><i class='fa fa-times'></i></button>";
								return button;
							}

						}
					],

				})
			}
		});

		// nhập nhà cc
		$("#FormNhapNhaCungCap").on('submit', function (e) {
			e.preventDefault();
			var formData = new FormData(this);
			var table = $("#Tab_NhaCungCap").DataTable();
			$.ajax({
				url: '/Admin/DanhMucNhaCungCap/NhapNhaCC',
				type:'POST',
				data: formData,
				dataType:'json',
				contentType: false,
				processData: false,
				success: function (response){
					if (response.success == true) {
						table.row.add(response.data).draw(); // thêm vào dòng vừa thêm vào datatable
						$('#addRowModal').find('#FormNhapNhaCungCap')[0].reset(); // clear  data form
						$('#addRowModal').modal('hide'); // tắt modal đi
						Swal.fire({
							icon: 'success',
							title: 'Thông Báo',
							text: 'Thêm nhà cung cấp thành công !'
						});
					}
					else{
						Swal.fire({
							icon: 'error',
							title: 'Thông Báo',
							text: 'Thêm thất bại !'
						});
					}
				},
			});
		});

		// xóa nhà cc
		$('#Tab_NhaCungCap').on('click', '#btnXoa', function () {
			Swal.fire({
				icon: 'question',
				title: 'Thông Báo',
				text: 'Bạn có chắc muốn xóa không ?',
				showCancelButton: true,
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes',
				confirmButtonColor: '#3085d6',
			}).then((result) => {
				if (result.isConfirmed) {
					var table = $('#Tab_NhaCungCap').DataTable();
					var data = table.row($(this).parents('tr')).data();// data là một mảng hoặc đối tượng chứa dữ liệu của dòng
					var rowd = table.row($(this).parents('tr'));
					$.ajax({
						url: '/Admin/DanhMucNhaCungCap/XoaNhaCC',
						type: 'Delete',
						data: { MaNcc: data.maNcc },
						dataType: 'json',
						success: function (response) {
							if (response.success == true) {
								rowd.remove().draw();
								Swal.fire({
									icon: 'success',
									title: 'Thông Báo',
									text: 'Xóa thành công !'
								});
							}
							else {
								Swal.fire({
									icon: 'error',
									title: 'Thông Báo',
									text: 'Xóa thất bại !'
								});
							}
						},

					});
				}
			});
		});

	</script>
	<!-- kiểm tra input không cần gửi qua server-->
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}