@model EcomerceMVC.ViewModels.DangNhapViewModel
@{
	ViewData["Title"] = "DangNhap";
}
<!-- Modal -->
<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content ">
			<div class="modal-header d-block">
				<div class="row justify-content-end">
					<div class="col-2">
						<button type="button" class="border border-0 bg-white me-4" data-bs-dismiss="modal" aria-label="Close"><i class="btn btn-close"></i></button>
					</div>
					
				</div>
				<h3 class="modal-title text-center" id="exampleModalLabel">Đăng nhập</h3>
			</div>
			<div class="modal-body">
				<form asp-controller="KhachHang" asp-action="DangNhap" asp-route-returnurl="@ViewBag.returnUrl">
					<div class="row">
						<div class="form-item">
							<div form-item w-100>
								<span class="text-danger"> @ViewBag.Message</span>
							</div>
						</div>
						<div class="form-item">
							<div class="form-item w-100">
								<label asp-for="@Model.TaiKhoan" class="form-label my-3"></label><sup class="text-danger">*</sup>
								<div class="input-group mb-3">
									<span class="input-group-text"><i class="bi bi-file-person"></i></span>
									<input asp-for="@Model.TaiKhoan" class="form-control" placeholder="Tài khoản">
								</div>
								<span asp-validation-for="@Model.TaiKhoan" class="text-danger"></span>
							</div>
						</div>
						<div class="form-item">
							<div class="form-item w-100">
								<label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup class="text-danger">*</sup>
								<div class="input-group mb-3">
									<span class="input-group-text"><i class="bi bi-file-lock2"></i></span>
									<input asp-for="@Model.MatKhau" class="form-control" placeholder="Mật khẩu">
								</div>
								<span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
							</div>
						</div>

						<div class="form-item">
							<div class="form-item w-100">
								<div class="row g-0 text-center align-items-center justify-content-center pt-4">
									<button type="submit" class="btn border-secondary text-uppercase text-primary w-50 ">Đăng nhập</button>
								</div>
							</div>
						</div>
						@* <div class="col-md-12 col-lg-6">
						<div class="row g-0 text-center align-items-center justify-content-center pt-4">
						<button type="button" class="btn border-secondary text-uppercase text-primary" data-bs-dismiss="modal" aria-label="Close">Thoát</button>
						</div>
						</div> *@

						<div class="form-item">
							<div class="row g-0 text-center align-items-center justify-content-center pt-4">
								<a>Quên mật khẩu ?</a>
							</div>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {

			$('#exampleModal').modal('show');

		});
	</script>

}
