@model EcomerceMVC.Helpers.PaginatedList<EcomerceMVC.ViewModels.HangHoaViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "_DanhSachHangHoa";
}

<!-- Single Page Header start -->
@section BreadCum {
	<div class="container-fluid page-header py-5">
		<h1 class="text-center text-white display-6">Shop</h1>
		<ol class="breadcrumb justify-content-center mb-0">
			<li class="breadcrumb-item"><a href="/Home">Home</a></li>
			<li class="breadcrumb-item"><a href="#">Pages</a></li>
			<li class="breadcrumb-item active text-white">Pages</li>
		</ol>
	</div>
}
<!-- Single Page Header End -->
<!-- Fruits Shop Start-->
@await Html.PartialAsync("ProductItem", @Model.Items)

<!--Phân trang-->
<div class="col-12">
	<div class="pagination d-flex justify-content-center mt-5">
		<a asp-controller="HangHoa" asp-action="Index" asp-route-MaLoai="@(Model.Items.FirstOrDefault()?.MaLoai == 0 ? null : Model.Items.FirstOrDefault()?.MaLoai)" asp-route-PageNumber="@(Model.PageIndex - 1)" class="rounded @(Model.HasPreviousPage == true ? "disabled" : "")" tabindex="-1">&laquo;</a>
		@for (int i = 1; i <= Model.TotalPage; i++)
		{
			<a asp-controller="HangHoa" asp-action="Index" asp-route-MaLoai="@(Model.Items.FirstOrDefault()?.MaLoai == 0 ? null : Model.Items.FirstOrDefault()?.MaLoai)" asp-route-PageNumber="@i" class="@(Model.PageIndex == i ? "active rounded" : "rounded") ">@i</a>
		}
		<a asp-controller="HangHoa" asp-action="Index" asp-route-MaLoai="@(Model.Items.FirstOrDefault()?.MaLoai == 0 ? null : Model.Items.FirstOrDefault()?.MaLoai)" asp-route-PageNumber="@(Model.PageIndex + 1)" class="rounded @(Model.HasNextPage == true ? "disabled" : "")">&raquo;</a>
	</div>
</div>
<!-- End phân trang-->

<!-- Fruits Shop End-->
